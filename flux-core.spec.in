Name: @META_NAME@
Version: @META_VERSION@
Release: @META_RELEASE@%{?dist}

Summary: Flux Resource Manager Framework
License: GPL
Group: System Environment/Base
Url: https://github.com/flux-framework/flux-core
Source0: %{name}-%{version}.tar.gz
BuildRoot: %{_tmppath}/%{name}-%{version}-root-%(%{__id_u} -n)
BuildRequires: zeromq4-devel czmq-devel >= 2.2.0
BuildRequires: munge-devel
BuildRequires: json-c-devel

%description

%package devel
Summary: Headers and libraries for the Flux Resource Manager Framework
Group: Development/System
Requires: %{name}%{?_isa} = %{version}-%{release}
%description devel
Headers and libraries for developing software with the Flux Resource
Manager Framework.

%prep
%setup

%build
%configure --program-prefix=%{?_program_prefix:%{_program_prefix}}
make %{?_smp_mflags}

%check
make check

%install
rm -rf $RPM_BUILD_ROOT
mkdir -p $RPM_BUILD_ROOT
make install DESTDIR=$RPM_BUILD_ROOT

%clean
rm -rf $RPM_BUILD_ROOT

%files
%defattr(-,root,root)
%doc ChangeLog NEWS DISCLAIMER.LLNS COPYING INSTALL README AUTHORS
%dir %{_libdir}/flux
%{_libdir}/flux/*.so.*
%{_libdir}/flux/modules
%{_libdir}/flux/modules/*
/etc/ld.so.conf.d/*
%{_libexecdir}/flux
%{_bindir}/flux

%files devel
%defattr(-,root,root)
%{_includedir}/flux
%{_libdir}/flux/*.a
%{_libdir}/flux/*.la
%{_libdir}/flux/*.so
%{_libdir}/pkgconfig/*

%post
if [ -x /sbin/ldconfig ]; then /sbin/ldconfig %{_libdir}/flux; fi

%postun
if [ -x /sbin/ldconfig ]; then /sbin/ldconfig %{_libdir}/flux; fi

%changelog
* Tue Sep 2 2014 Jim Garlick <garlick@llnl.gov> 0.1.0-1
- initial spec file created
