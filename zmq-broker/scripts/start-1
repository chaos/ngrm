rank2uri() {
    echo "ipc:///tmp/screen3_rank$1"
}

rank=1
size=3

${CMDPREFIX} ${CMBD:-./cmbd} \
  --verbose \
  --child-uri=$(rank2uri $rank) \
  --parent-uri=$(rank2uri $(($rank-1))) \
  --rank=$rank --size=$size \
  --plugins=modctl,api,barrier,live,log,kvs,job,rexec,rank \
  api:sockpath=/tmp/rank.$rank \
  rank:right-uri=$(rank2uri $(($rank+1)))
