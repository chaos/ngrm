rank2uri() {
    echo "ipc:///tmp/screen3_rank$1"
}

rank=2
size=3

${CMDPREFIX} ${CMBD:-./cmbd} \
  --verbose \
  --child-uri=$(rank2uri $rank) \
  --parent-uri=$(rank2uri $(($rank-1))) \
  --right-uri=$(rank2uri 0) \
  --event-uri="ipc:///tmp/screen3_event" \
  --rank=$rank --size=$size --sid=screen \
  --plugins=modctl,api,barrier,live,kvs,job,rexec
